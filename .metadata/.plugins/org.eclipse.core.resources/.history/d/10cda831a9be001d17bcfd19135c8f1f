package ConversorDeMoedas;

import javax.swing.*;
import java.util.Formatter;
import java.util.Formatter;
import java.util.Formatter;

public class converteMoeda {

//	private static String getDialogChoices3() {
//		String[] choices = { "Conversor de Moedas", "Conversor de Temperatura" };
//		return (String) JOptionPane.showInputDialog(null, "Qual conversão deseja fazer?", "Conversor", JOptionPane.QUESTION_MESSAGE,
//				null, choices, choices[0]);
